@page
@model Ganaderia.App.Presentacion.Pages.PredioModel
@{
}
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="~/css/Predio.css"></link>
</head>
<body>
    <table class="table table-striped">
        <h2>Predios</h2>
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Longitud</th>
                <th>Latitud</th>
                <th>Direcci√≥n</th>
                <th>Ciudad</th>
                <th>Cantidad ejemplares</th>
                <th>Opciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var farm in Model.Farms)
            {
                <tr>
                    <td>@farm.Id</td>
                    <td>@farm.Name</td>
                    <td>@farm.Longitud</td>
                    <td>@farm.Latitud</td>
                    <td>@farm.Address</td>
                    <td>@farm.City</td>
                    <td>@farm.AmountOfSpecimen</td>
                    <td>
                        <button type="submit">Eliminar</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>